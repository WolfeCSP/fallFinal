{
  "name": "AP CSP Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.10",
  "extensions": [
    "ms-python.python",
    "ms-toolsai.jupyter",
    "ms-vscode.live-server"
  ],
  "settings": {
    "editor.formatOnSave": true,
    "python.formatting.provider": "black"
  },
  "postCreateCommand": "pip install -r requirements.txt"
}
